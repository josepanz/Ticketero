@model IEnumerable<Ticketero.Models.Caja>

@{
    ViewBag.Title = "Lista Cajas";
}

<h2>Inicio Caja</h2>

<p>
    @Html.ActionLink("Nueva Caja", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_Caja }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_Caja }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_Caja })
        </td>
    </tr>
}

</table>
