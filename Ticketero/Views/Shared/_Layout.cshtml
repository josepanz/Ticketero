    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">Ticket Fresh</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto my-2 my-lg-0">
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/Home/Index/">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/Home/About/#about">Acerca De</a></li>
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/Home/Contact/#contacto">Contacto</a></li>
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/Cajas/Index/#index">Caja</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/Clientes/Index/#index">Clientes</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/Tickets/Index/#index">Tickets</a></li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/Tickets/DailyList/#index">Tickets del día</a></li>
                    }
                </ul>
                <p class="nav-item nav-link js-scroll-trigger"> @Html.Partial("_LoginPartial")</p>
            </div>
        </div>
    </nav>
    <!-- Masthead-->
    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h1 class="text-uppercase text-white font-weight-bold">Sistema de Tickets</h1>
                    <hr class="divider my-4" />
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 font-weight-light mb-5">Sistema sencillo, simple e intuitivo, para gestión de Turnos por Tickets!</p>
                    <a class="btn btn-primary btn-xl js-scroll-trigger" href="https://github.com/josepanz/Ticketero">Git Code!</a>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <h2 style="color:white">Organización</h2>
                        <p style="color:white">
                            Tickets Fresh permite la atención por turnos o citas ayudando a la organización a realizar una atención mucho mas organizada y rápida.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h2 style="color:white">Comodidad</h2>
                        <p style="color:white">
                            Al ser una aplicación web se puede utilizar en cualquier navegador con acceso a internet, tendrá total disponibilidad en cuanto a
                            hora y lugar y podrá trabajar en ella en cualquier momento.
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h2 style="color:white">Fácil de usar</h2>
                        <p style="color:white">Un sistema amigable con el usuario y muy intuitivo lo que permite una rápida adaptación y usabilidad ahorrando mucho mas tiempo y esfuerzo.</p>
                    </div>
                </div>
            </div>
        </div>
    </header>
